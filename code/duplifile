public class GelismisHesaplayici
{
    public int Topla(int a, int b)
    {
        return a + b;
    }

    public int Cikar(int a, int b)
    {
        return a - b;
    }

    public int Carp(int a, int b)
    {
        return a * b;
    }

    public int Bol(int a, int b)
    {
name: Detect Code Duplication

on:
  pull_request:
    branches:
      - main

jobs:
  duplication-check:
    name: Detect Code Duplication
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repository
        uses: actions/checkout@v4
        with:
          fetch-depth: 0  # Tüm geçmişi al

      - name: Set up Node.js
        uses: actions/setup-node@v3
        with:
          node-version: '18'

      - name: Install jscpd
        run: npm install -g jscpd

      - name: Get changed files
        id: changed-files
        run: |
          CHANGED_FILES=$(git diff --name-only origin/main | tr '\n' ' ')
          echo "CHANGED_FILES=$CHANGED_FILES" >> $GITHUB_ENV

      - name: Run jscpd on changed files
        if: env.CHANGED_FILES != ''
        run: |
          echo "Changed files: $CHANGED_FILES"
          jscpd --min-tokens 50 --threshold 1 --reporters console $CHANGED_FILES

        return a / b;
    }
}

