public class Hesaplayici
{
    public int Topla(int a, int b)
    {
        return a + b;
    }

    public int Cikar(int a, int b)
    {
        return a - b;
    }

    public int Carp(int a, int b)
    {
        return a * b;
    }

    public int Bol(int a, int b)
    {
        return a / b;
    }
}

